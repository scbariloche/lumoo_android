<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.thinkad.lumoo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ChatActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name=".dialogs.NewEventActivity"
            android:theme="@style/Dialog" />
        <activity
            android:name=".dialogs.FilterEventActivity"
            android:theme="@style/Dialog" />
        <activity
            android:name=".dialogs.EditProfileActivity"
            android:theme="@style/Dialog" />
        <activity
            android:name=".dialogs.ProfileActivity"
            android:theme="@style/Dialog" />
        <activity android:name=".dialogs.EventActivity"
            android:theme="@style/Dialog"></activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>